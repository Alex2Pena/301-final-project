<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./layout/head.ejs') %>
  
  </head>
  <body>
    <%- include('./layout/header.ejs') %>
 
<form action="/search" method="get">
  <input class = "grid-item" type="text" name="search" placeholder="Enter a title or author" required>
</form>
<ul>
  <% bananas.forEach(result => { %>
      <form action="/favorites" method="post">
          <img src="<%= result.picture %>" />
          <li>Title: <%= result.name %></li>
          <li>Available On: <%= result.locations %></li>
          <li></li><input class = "grid-item" type="text" name="comments" placeholder="your notes"></li>
                   
          <input type="hidden" name="picture" value="<%= result.picture %>" />  
          <input type="hidden" name="name" value="<%= result.name %>" />
          <input type="hidden" name="locations" value="<%= result.locations %>" />
          
 
      <button>Add to my favorites</button>
      </form>
  <% }) %>
</ul>
</body>
</html>
